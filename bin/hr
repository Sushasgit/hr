#!/usr/bin/env ruby

require 'hr'
require 'optparse'

options = {}
available_colors = String.colors.map(&:to_s)
available_colors.delete("default")
available_modes = String.modes.map(&:to_s)
available_modes.delete("default")
option_parser = OptionParser.new do |opts|
  executable_name = File.basename($PROGRAM_NAME)
  opts.banner = "<hr /> for your terminal

Usage: #{executable_name} [options] pattern"

  opts.on("-c COLOR", "color of the text (#{available_colors.join(", ")})") do |color|
    options[:color] = color
  end

  opts.on("-b BACKGROUND", "color of the background (#{available_colors.join(", ")})") do |color|
    options[:background] = color
  end

  opts.on("-m MODE", "the text mode (#{available_modes.join(", ")})") do |mode|
    options[:mode] = mode
  end
end

option_parser.parse!
Hr.print(*ARGV, options)
